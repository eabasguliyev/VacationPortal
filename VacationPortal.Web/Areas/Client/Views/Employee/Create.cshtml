@model VacationPortal.Models.VacationApplication

@{
    ViewData["Title"] = "Create";
}

<h4>VacationApplication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDatetime" class="control-label"></label>
                <input asp-for="StartDatetime" class="form-control" />
                <span asp-validation-for="StartDatetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysOfVacation" class="control-label"></label>
                <input asp-for="DaysOfVacation" class="form-control" />
                <span asp-validation-for="DaysOfVacation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
