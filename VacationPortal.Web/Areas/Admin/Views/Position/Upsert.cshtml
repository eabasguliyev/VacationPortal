@using VacationPortal.Web.Areas.Admin.Models.PositionVMs
@model PositionUpsertVM

@{
    ViewData["Title"] = "Upsert";
}

<h1>@(Model.Position.Id != 0 ? "Update" : "Create") Position</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form methd="post" asp-action="Upsert">
            <input hidden asp-for="Position.Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Position.Name" class="control-label"></label>
                <input asp-for="Position.Name" class="form-control" />
                <span asp-validation-for="Position.Name" class="text-danger"></span>
            </div>
            @if(Model.Position.Id != 0){
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            }else{
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
